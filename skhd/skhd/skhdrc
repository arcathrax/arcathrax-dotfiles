# Changing Window Focus

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# resize window
ctrl + cmd - h : yabai -m window --resize left:-40:0 ; yabai -m window --resize right:-20:0
ctrl + cmd - j : yabai -m window --resize bottom:0:40 ; yabai -m window --resize top:0:20
ctrl + cmd - k : yabai -m window --resize top:0:-40 ; yabai -m window --resize bottom:0:-20
ctrl + cmd - l : yabai -m window --resize right:40:0 ; yabai -m window --resize left:20:0

# rotate layout clockwise
alt - u : yabai -m space --rotate 270
